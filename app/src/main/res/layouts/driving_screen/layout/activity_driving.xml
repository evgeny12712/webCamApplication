<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424"
    tools:context="Driving.DrivingActivity">

    <fragment
        android:name="Driving.CameraRecordingFragment"
        android:id="@+id/cameraRecordingFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <fragment
        android:name="Driving.SpeedAndChronoFragment"
        android:id="@+id/speed_and_chronometer"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btnMinimize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/minimize_button"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/stop_button" />

        <ImageButton
            android:id="@+id/btnPicture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/picture_button" />
    </LinearLayout>



</RelativeLayout>
